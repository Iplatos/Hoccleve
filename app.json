{
  "expo": {
    "name": "Hoccleve",
    "owner": "yourcompany-dev",
    "slug": "Hoccleve_v1",
    "version": "1.0.4",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 0
    },
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ipla.hoccleve",
      "googleServicesFile": "./GoogleService-Info.plist",
      "buildNumber": "4",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow Hoccleve to access your microphone for audio recordings."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 4,
      "package": "com.ipla.hoccleve",
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.RECORD_AUDIO", "android.permission.MODIFY_AUDIO_SETTINGS"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Hoccleve to access your microphone."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      ["@config-plugins/react-native-pdf", "11.0.0"],
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "0a573569-5028-4590-988c-da5e341a5fb1"
      }
    }
  }
}
